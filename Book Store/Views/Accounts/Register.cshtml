@model Book_Store.Models.ErrorMessage

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("Register", "Accounts", FormMethod.Post))
        {
        <div>
            <div>
                <label>Tên người dùng: </label>
                <input type="text" class="form-control" name="username" />
            </div>
            <div>
                <label>Email: </label>
                <input type="text" class="form-control" name="email" />
            </div>
            <div>
                <label>Mật khẩu: </label>
                <input type="text" class="form-control" name="password" />
            </div>
            <div>
                <label>Nhập lại mật khẩu: </label>
                <input type="text" class="form-control" name="repassword" />
            </div>
            @if (Model != null)
            {
                <a>@Model.Message</a>
            }
            <button type="submit">Đăng ký</button>
        </div>
        }
        <button type="button"><a href="@Url.Action("Đăng nhập", "Accounts")">Đăng nhập</a></button>
    </div>
</body>
</html>
