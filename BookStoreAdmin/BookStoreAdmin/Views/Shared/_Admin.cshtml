
@{
    Layout = null;
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();

}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Book Store Admin</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/favicon.png">
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="~/assets/css/feathericon.min.css">
    <link rel="stylesheet" href="~/assets/plugins/morris/morris.css">
    <link rel="stylesheet" type="text/css" href="~/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <style>
        a {
            text-decoration: none;
        }

        .pagination {
            display: flex;
            justify-content: center;
            padding: 0;
            list-style: none;
        }

            .pagination li {
                display: inline;
            }

            .pagination a, .pagination span {
                color: #007bff;
                padding: 0.5rem 0.75rem;
                margin-left: -1px;
                border: 1px solid #dee2e6;
                text-decoration: none;
                background-color: #fff;
            }

                .pagination a:hover:not(.active) {
                    background-color: #ddd;
                }

            .pagination .active a, .pagination .active span {
                background-color: #007bff;
                color: white;
                border-color: #007bff;
            }
    </style>
</head>

<body>
    <div class="main-wrapper">
        <div class="header">
            <div class="header-left">
                <a href="~/Home/Index" class="logo"> <img src="~/assets/img/logo.png" width="50" height="70" alt="logo"> <span class="logoclass">Nhà sách</span> </a>
                <a href="~/Home/Index" class="logo logo-small"> <img src="~/assets/img/logo.png" alt="Logo" width="30" height="30"> </a>
            </div>
            <a href="javascript:void(0);" id="toggle_btn"> <i class="fe fe-text-align-left"></i> </a>
            <a class="mobile_btn" id="mobile_btn"> <i class="fas fa-bars"></i> </a>
            <div class="nav user-menu align-items-center">
                <a class="btn btn-warning" href="~/accounts/Logout">Đăng xuất</a>
            </div>
        </div>
        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="@(controller == "Home" && action == "Index" ? "active" : "")"> <a href="~/Home//Index"><i class="fas fa-tachometer-alt"></i> <span>Dashboard</span></a> </li>
                        <li class="list-divider"></li>
                        <li class="submenu">
                            <a class="@(controller == "books" ? "active" : "")" href="#"><i class="fas fa-book"></i> <span>Sách</span> <span class="menu-arrow"></span></a>
                            <ul class="submenu_class" style="display: none;">
                                <li><a class="@(controller == "books" && action == "Index" ? "active" : "")" href="~/books/Index">Tất cả sách</a></li>
                                <li><a class="@(controller == "books" && action == "Create" ? "active" : "")" href="~/books/Create">Thêm sách</a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a class="@(controller == "accounts" ? "active" : "")" href="#"><i class="fas fa-user"></i> <span> Quản lý Tài khoản </span> <span class="menu-arrow"></span></a>
                            <ul class="submenu_class" style="display: none;">
                                <li><a class="@(controller == "accounts" && action == "Index" ? "active" : "")" href="~/accounts/Index"> Tất cả tài khoản </a></li>
                                <li><a class="@(controller == "accounts" && action == "Create" ? "active" : "")" href="~/accounts/Create"> Thêm tài khoản </a></li>
                            </ul>
                        </li>
                        <li class="submenu">
                            <a class="@(controller == "categories" ? "active" : "")" href="#"><i class="fas fa-calendar-alt"></i> <span> Danh mục </span> <span class="menu-arrow"></span></a>
                            <ul class="submenu_class" style="display: none;">
                                <li><a class="@(controller == "categories" && action == "Index" ? "active" : "")" href="~/categories/Index">Tất cả danh mục</a></li>
                                <li><a class="@(controller == "categories" && action == "Create" ? "active" : "")" href="~/categories/Create">Thêm danh mục</a></li>
                            </ul>
                        </li>
                        <li class="@(controller == "orders" && action == "Statistics" ? "active" : "")"> <a href="~/orders/Statistics"><i class="fas fa-money-bill-alt"></i> <span>Thống kê doanh thu</span></a> </li>
                        <li class="@(controller == "orders" && action != "Statistics" ? "active" : "")"> <a href="~/orders"><i class="fas fa-edit"></i> <span>Tất cả đơn hàng</span></a> </li>
                        @*<li class="submenu">
                            <a class="@(controller == "orders" && action != "Statistics" ? "active" : "")" href="#"><i class="fas fa-edit"></i> <span> Tất cả đơn hàng </span> <span class="menu-arrow"></span></a>
                            <ul class="submenu_class" style="display: none;">
                                <li><a class="@(controller == "orders" && action == "Index" ? "active" : "")" href="~/orders/">Tất cả đơn hàng</a></li>
                                <li><a class="@(controller == "orders" && action == "Create" ? "active" : "")" href="~/orders/Create"> Thêm đơn hàng</a></li>
                            </ul>
                        </li>*@

                    </ul>
                </div>
            </div>
        </div>
        <div class="page-wrapper">
            <div class="content container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    <script data-cfasync="false" src="../../../cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script>
    <script src="~/assets/js/jquery-3.5.1.min.js"></script>
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>
    <script src="~/assets/js/moment.min.js"></script>
    <script src="~/assets/js/select2.min.js"></script>
    <script src="~/assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="~/assets/plugins/raphael/raphael.min.js"></script>
    <script src="~/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script>
        $(function () {
            $('#datetimepicker3').datetimepicker({
                format: 'LT'
            });
        });
    </script>
</body>
</html>
