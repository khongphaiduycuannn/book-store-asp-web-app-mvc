@model BookStoreAdmin.Models.author

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h2 class="text-danger"></h2>

<div class="alert alert-warning" role="alert">
    <h3>Bạn có chắc chắn muốn xóa ?</h3>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h4>Chi Tiết Tác Giả</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                Tên Tác Giả
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.name)
            </dd>

            <dt class="col-sm-3">
                Hình Ảnh
            </dt>
            <dd class="col-sm-9">
                <img src="~/assets/img/author/@(Model.image)" alt="@Model.name" width="100px" class="rounded" />
            </dd>

            <dt class="col-sm-3">
                Mô Tả
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.description)
            </dd>

            <dt class="col-sm-3">
                Đã Xóa
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.is_deleted)
            </dd>

            <dt class="col-sm-3">
                Ngày Tạo
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.created_at)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <button type="submit" class="btn btn-danger">Xóa</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary ml-2" })
        }
    </div>
</div>
